{
  "manifest_version": 3,
  "name": "Page Counter & Wikipedia Embed",
  "version": "1.1",
  "description": "A counter embedded in both the page and popup, with Wikipedia content.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>", "https://en.wikipedia.org/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}